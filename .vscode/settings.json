{
    "workbench.colorTheme": "Monokai",
    "editor.minimap.enabled": false,
    "files.autoSave": "onFocusChange",
    "terminal.integrated.defaultProfile.windows": "pwsh7",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "source": "Git Bash"
        },
        "pwsh7": {
            "path": "D:/Program Files/pwsh7/7/pwsh.exe"
        }
    },
    "editor.fontFamily": "Fira Code Retina",
    "editor.fontSize": 16,
    "editor.fontLigatures": "'cv01', 'cv04', 'cv08', 'ss01', 'zero', 'cv14', 'cv17', 'ss05', 'ss04', 'cv18', 'ss03', 'cv30', 'ss02'",
    "terminal.integrated.fontFamily": "IBM Plex Mono",
    "workbench.editor.showTabs": "multiple",
    "workbench.colorCustomizations": {
        "editor.selectionHighlightBackground": "#c03a2bd7"
    },
    "workbench.statusBar.visible": true,
    "editor.lineNumbers": "on",
    "editor.cursorStyle": "block",
    "editor.tabCompletion": "on",
    "editor.hover.enabled": true,
    "editor.hover.delay": 800,
    "editor.quickSuggestions": {
        "other": "on",
        "comments": "on",
        "strings": "on"
    },
    "window.zoomLevel": 0,
    "todohighlight.isEnable": true,
    "todohighlight.keywords": [
        {
            "text": "TODO:",
            "color": "red",
            "backgroundColor": "rgba(0,0,0,0)"
        },
        {
            "text": "HACK:",
            "color": "#ff6600",
            "backgroundColor": "rgba(0,0,0,0)"
        },
        {
            "text": "NOTE:",
            "color": "green",
            "backgroundColor": "rgba(0,0,0,0)"
        },
        {
            "text": "LABEL:",
            "color": "#B5B8BE",
            "backgroundColor": "rgba(0,0,0,0)"
        }
    ],
    "todohighlight.include": [
        "**/*.h",
        "**/*.c"
    ],
    "todohighlight.defaultStyle": {
        "color": "red",
        "backgroundColor": "#ffab00",
        "overviewRulerColor": "rgba(0,0,0,0)",
        "isWholeLine": false,
    },
    "clangd.arguments": [
        "--header-insertion=never",
        "--function-arg-placeholders=0"
    ],
    "files.associations": {
        "event.h": "c",
        "fmath.h": "c",
        "fmemory.h": "c",
        "ftime.h": "c",
        "window.h": "c",
        "ability.h": "c",
        "camera.h": "c",
        "game_manager.h": "c",
        "player.h": "c",
        "resource.h": "c",
        "spawn.h": "c",
        "user_interface.h": "c",
        "app.h": "c",
        "defines.h": "c",
        "reasings.h": "c",
        "lexer.h": "c",
        "tilemap.h": "c",
        "spritesheet.h": "c",
        "settings.h": "c",
        "scene_manager.h": "c",
        "scene_main_menu.h": "c",
        "scene_in_game.h": "c",
        "scene_editor.h": "c",
        "fshader.h": "c",
    },
}